<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:padding="12dp">

            <TextView
                android:id="@+id/contactUsernameId"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:textColor="@android:color/white"
                android:paddingLeft="15dp"
                android:text="lauradang"
                android:textSize="17sp"
                android:fontFamily="@font/kingthings"
                />

            <ImageView
                android:id="@+id/fbEntryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/contactUsernameId"
                android:paddingTop="32dp"
                android:paddingLeft="30dp"
                android:src="@drawable/com_facebook_favicon_blue" />

            <ImageView
                android:id="@+id/igEntryId"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_toRightOf="@id/fbEntryId"
                android:paddingTop="31dp"
                android:paddingLeft="30dp"
                android:src="@drawable/ig_logo"/>

            <ImageView
                android:id="@+id/twEntryId"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:paddingLeft="30dp"
                android:paddingTop="24dp"
                android:layout_toRightOf="@id/igEntryId"
                android:src="@drawable/tw"/>

            <ImageView
                android:id="@+id/linkEntryId"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_toRightOf="@id/twEntryId"
                android:fontFamily="@font/kingthings"
                android:paddingLeft="30dp"
                android:paddingTop="28dp"
                android:src="@drawable/link" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>